<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Web-application</display-name>
  <servlet>
  	<servlet-name>StartServlet</servlet-name>
  	<servlet-class>dev.pustelnikov.controller.StartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>StartServlet</servlet-name>
  	<url-pattern>/start</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>dev.pustelnikov.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>SortingServlet</servlet-name>
  	<servlet-class>dev.pustelnikov.controller.SortingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>SortingServlet</servlet-name>
  	<url-pattern>/sort</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>FilteringServlet</servlet-name>
  	<servlet-class>dev.pustelnikov.controller.FilteringServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>FilteringServlet</servlet-name>
  	<url-pattern>/filt</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>CalculatingServlet</servlet-name>
  	<servlet-class>dev.pustelnikov.controller.CalculatingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CalculatingServlet</servlet-name>
  	<url-pattern>/calc</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>LogoutServlet</servlet-name>
  	<servlet-class>dev.pustelnikov.controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LogoutServlet</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
    <filter>
  	<filter-name>AuthenticationFilter</filter-name>
  	<filter-class>dev.pustelnikov.filter.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>AuthenticationFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
